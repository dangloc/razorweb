@page "/admin/delete-role/{roleid}"
@model App.Admin.Role.DeleteModel
@{
   ViewData["Title"] = "uptade role";
}
<h2>@ViewData["Title"]</h2>

<partial name="_StatusMessage" model="@Model.StatusMessage"></partial>
<hr>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <a>Are you sure you want to delete?<strong>@Model.role.Name</strong></a>
            <div class="form-group">
                <input type="submit" value="Oke" class="btn btn-danger" />
                <a class="btn btn-primary " asp-page="./Index">role list</a>
            </div>

            
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

